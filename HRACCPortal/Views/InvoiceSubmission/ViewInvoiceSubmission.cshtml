                            <th class="min-w-70px">Month</th>
                            <th class="min-w-70px">Customer Name</th>
                            <th class="min-w-70px">Last Updated Date</th>
                            <th>Actions</th>
                        </tr>
                        <!--end::Table row-->
                    </thead>
                    <!--end::Table head-->
                    <!--begin::Table body-->
                    <tbody class="fw-semibold text-gray-600">
