@section scripts{

    <!--begin::Vendors Javascript(used for this page only)-->
    <script src="~/Content/assets/js/custom/apps/calendar/calendar.js"></script>

    <script src="~/Content/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <!--end::Vendors Javascript-->
    <!--begin::Custom Javascript(used for this page only)-->
    <script src="~/Content/assets/plugins/custom/fullcalendar/fullcalendar.bundle.js"></script>
    <script src="~/Content/assets/js/custom/apps/customers/list/list.js"></script>
    <script src="~/Content/assets/js/custom/apps/customers/addinvoicesubmission.js"></script>
    <script src="~/Content/assets/js/widgets.bundle.js"></script>
    <script src="~/Content/assets/js/custom/widgets.js"></script>
    <!--end::Custom Javascript-->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
           

            // Get current year and month
            const currentDate = new Date();
            const currentYear = currentDate.getFullYear();
            const currentMonth = currentDate.toLocaleString('default', { month: 'long' }); // e.g., "December"

            // Set default year in the dropdown
            const yearDropdown = document.querySelector('select[name="Year"]');
            if (yearDropdown) {
                yearDropdown.value = currentYear;
            }

            // Set default month in the dropdown
            const monthDropdown = document.querySelector('select[name="Month"]');
            if (monthDropdown) {
                monthDropdown.value = currentMonth;
            }
        });

        new tempusDominus.TempusDominus(document.getElementById("InactiveDate"), {
            display: {
                viewMode: "calendar",
                components: {
                    decades: true,
                    year: true,
                    month: true,
                    date: true,
                    hours: false,
                    minutes: false,
                    seconds: false
                }
            }
        });

        function EditInvoiceSubmission_Click(clicked) {
            $.ajax({
                type: "POST",
                url: '/InvoiceSubmission/EditInvoiceSubmission',
                data: '{id: ' + clicked + '}',
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    $("#btnpopup").click();
                    //$("input[name='CustomerName']").val(response.positionData.CustomerName);
                    $(".CustomerName").val(response.invoicesubmissionData.CustomerIdFK);
                    $(".CustomerName").change();
                    $("input[name='InvoiceSubmissionId']").val(response.invoicesubmissionData.InvoiceSubmissionId);
                    $("input[name='CustomerIdFK']").val(response.invoicesubmissionData.CustomerIdFK);
                 //   $("input[name='Year']").val(response.invoicesubmissionData.Year).attr("disabled", "disabled");
                    $("input[name='Month']").val(response.invoicesubmissionData.Month);
                    $("input[name='Year']").val(response.invoicesubmissionData.Year);
                   // $("input[name='PositionScopeVariant']").val(response.positionData.PositionScopeVariant);
                   // $("input[name='PurchaseOrderNo']").val(response.positionData.PurchaseOrderNo).addClass('input-disabled');
                   // $("input[name='PurchaseRequisitionNo']").val(response.positionData.PurchaseRequisitionNo);

                    if (response.invoicesubmissionData.Status == true) {
                        $("#Status").prop('checked', true);
                        $("#hide_inactivedetails").hide();
                    }
                    if (response.invoicesubmissionData.Status == false) {
                        $("#Status").prop('checked', false);
                        $("#hide_inactivedetails").show();
                    }

                    $("input[name='InactiveDate']").val(response.invoicesubmissionData.InactiveDate);
                    $("input[name='InactiveReason']").val(response.invoicesubmissionData.InactiveReason);
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    submitButton.removeAttribute('data-kt-indicator');

                    console.log("Custom error : " + jqXHR.responseText + " Status: " + textStatus + " Http error:" + errorThrown);

                    Swal.fire({
                        text: "Custom error : " + jqXHR.responseText + " Status: " + textStatus + " Http error:" + errorThrown,
                        icon: "error",
                        buttonsStyling: false,
                        confirmButtonText: "Ok, got it!",
                        customClass: {
                            confirmButton: "btn btn-primary"
                        }
                    });

                }
            });



        }
        $(document).ready(function () {
            $("#Status").click(function () {
                if ($(this).is(":checked")) {

                    $("#hide_inactivedetails").hide();
                    $("#divreason").hide();
                    $("#divdate").hide();
                }
                else {

                    $("#hide_inactivedetails").show();
                    $("#divreason").show();
                    $("#divdate").show();
                }
            });
        });
         $("#InactiveReason").blur(function () {
                if ($(this).val() == "") {
                    $("#divreason").show();
                } else {
                    $("#divreason").hide();
                }
            });

            $("#InactiveDate").blur(function () {
                if ($(this).val() == "") {
                    $("#divdate").show();
                } else {
                    $("#divdate").hide();
                }
            });
    </script>
}
