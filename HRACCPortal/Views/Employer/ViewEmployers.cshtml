                        <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                            <th class="w-10px pe-2">#</th>
                            <th class="min-w-125px">Name</th>
                            <th class="min-w-125px">Email</th>
                            <th class="min-w-125px">Phone</th>
                            <th class="min-w-125px">FEID</th>
                            <th>Last Updated Date</th>
                            <th class="min-w-125px">Status</th>
                            <th class="text-end min-w-70px">Actions</th>
                        </tr>
                        <!--end::Table row-->
                    </thead>
                    <!--end::Table head-->
                    <!--begin::Table body-->
                    <tbody class="fw-semibold text-gray-600">
                        @{
                            if (Model.EmployerList.Count > 0)
                            {
                                foreach (var item in Model.EmployerList)
                                {
                                    <tr>
                                        <td>
                                            @item.EmployerIdPK
                                        </td>
                                        <!--begin::Name=-->
                                        <td>
                                            <a href="../../Employee/ViewEmployees" class="text-gray-800 text-hover-primary mb-1">@(item.EmployerName)</a>
                                        </td>
                                        <!--end::Name=-->
                                        <!--begin::Email=-->
                                        <td>
                                            <span class="text-gray-600 text-hover-primary mb-1">@item.EmployerContactEmail</span>
                                        </td>
                                        <!--end::Email=-->
                                        <td>@item.EmployerContactPhone</td>
                                        <td>@item.EmployerFEID</td>
                                        <!--end::Payment method=-->
                                        <!--begin::Date=-->
                                        <td>@item.DateUpdated</td>
                                        <td>
                                            @if (item.isActive)
                                            {
                                                <span class="badge badge-light-success fs-7 fw-bold">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-light-danger fs-7 fw-bold">In-Active</span>
                                            }
                                        </td>
                                        <!--end::Date=-->
                                        <!--begin::Action=-->
                                        <td class="text-end">
                                            @*<button type="button" class="btn btn-primary btnEdit" id="@item.ConsultantIdPK" onClick="GFG_click(this.id)">Edit</button>*@



                                            <a href="javascript:void(0)" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1" id="@item.EmployerIdPK" onClick="GFG_click(this.id)">
