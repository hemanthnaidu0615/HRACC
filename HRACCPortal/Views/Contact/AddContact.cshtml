@section scripts{
    <script>
       $(function () {
           $("#btnReset").click(function (e) {
               e.preventDefault();
               window.location.href = '@Url.Action("ViewContacts", "Contact")';
           });

           $("#btnSave").click(function (e) {

            debugger;
            e.preventDefault();
               var cont = {};
               cont.ContactIdPK = $("ContactIdPK").val();
               cont.ContactName = $("#ContactName").val();
               cont.ContactPhone = $("#ContactPhone").val();
               cont.ContactEmail = $("#ContactEmail").val();
               cont.ContactAddress1 = $("#ContactAddress1").val();
               cont.ContactAddress2 = $("#ContactAddress2").val();
               cont.ContactCity = $("#ContactCity").val();
               cont.ContactState = $("#ContactState").val();
               cont.ContactType = $("#ContactType").val();
               cont.ContactZip = $("#ContactZip").val();
               cont.ContactFEID = $("#ContactFEID").val();
               cont.isActive = $('input#isActive').prop('checked');
            console.log("Contact:" + JSON.stringify(cont))

             $.ajax({
                type: "POST",
                url: '@Url.Action("AddContact", "Contact")',
                 // data: '{employer: ' + JSON.stringify(empl) + '}',
                 data: JSON.stringify({ contact: cont }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    // alert("Data has been added successfully.");
                    if (response.message == "success") {
                        window.location.href = '@Url.Action("ViewContact", "Contact")';
                    } else {
                        alert("Error while inserting data");
                        return false;
                    }
                },
                error: function () {
                    alert("Error while inserting data");
                }
            });
            return false;
        });
    });
    </script>

}
