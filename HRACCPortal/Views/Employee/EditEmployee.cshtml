        </div>
        <!--end::Content-->
    </div>
</div>

@section scripts{
    <script>
       $(function () {
           $("#btnReset").click(function (e) {
               e.preventDefault();
               window.location.href = '@Url.Action("ViewEmployees", "Employee")';
           });

           $("#btnSave").click(function (e) {

            debugger;
            e.preventDefault();
               var emple = {};
               emple.EmployeeName = $("#EmployeeName").val();
               emple.EmployeePhone = $("#EmployeePhone").val();
               emple.EmployeeEmail = $("#EmployeeEmail").val();
               emple.EmployeeAddress1 = $("#EmployeeAddress1").val();
               emple.EmployeeAddress2 = $("#EmployeeAddress2").val();
               emple.EmployeeCity = $("#EmployeeCity").val();
               emple.EmployeeState = $("#EmployeeState").val();
               emple.EmployeeType = $("#EmployeeType").val();


               emple.EmployeeZip = $("#EmployeeZip").val();
               emple.EmployeeTitle = $("EmployeeTitle").val();
               emple.EmployeeIdPk = $("#EmployeeIdPk").val();
               emple.isActive = $('input#isActive').prop('checked');
               console.log("Employee:" + JSON.stringify(emple))

             $.ajax({
                type: "POST",
                 url: '@Url.Action("UpdateEmployee", "Employee")',
                 data: '{:employee ' + JSON.stringify(emple) + '}',
                // data: JSON.stringify({ customer: cust }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    // alert("Data has been added successfully.");
                    if (response.Message == "SUCCESS") {
                        window.location.href = '@Url.Action("ViewEmployees", "Employee")';
                    } else {
                        alert("Error while updating data");
                        return false;
                    }
                },
                error: function () {
                    alert("Error while inserting data");
                }
            });
            return false;
        });
    });
    </script>

}
