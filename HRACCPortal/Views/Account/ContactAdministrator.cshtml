@{
    Layout = null; // Optional: Use a different layout if you have one
    ViewBag.Title = "Account Locked - Contact Administrator";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Global Styles */
        body {
            background: #E6E6FA; /* Elegant gradient background */
            font-family: 'Arial', sans-serif;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .contact-card {
            background: #fff;
            color: #333;
            max-width: 500px;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
            opacity: 0;
            transform: translateY(50px);
            transition: transform 0.8s ease-out, opacity 0.8s ease-out;
        }

            .contact-card.show {
                transform: translateY(0);
                opacity: 1;
            }

            .contact-card h3 {
                font-size: 2rem;
                font-weight: 700;
                color: #1F177F;
                margin-bottom: 20px;
                letter-spacing: 2px;
                text-transform: uppercase;
                font-family: 'Verdana', sans-serif;
            }

            .contact-card p {
                font-size: 1.1rem;
                color: #666;
                margin-bottom: 30px;
                line-height: 1.6;
            }

        .btn-custom {
            background-color: #6e7fdb;
            color: #fff;
            padding: 16px 24px;
            font-size: 1.1rem;
            border: none;
            border-radius: 30px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            letter-spacing: 1px;
        }

            .btn-custom:hover {
                background-color: #4b5cc4;
                transform: scale(1.05);
            }

        .footer-text {
            font-size: 1rem;
            color: #bbb;
            margin-top: 25px;
            text-align: center;
        }

            .footer-text strong {
                color: #fff;
            }

        /* Additional styling for visual appeal */
        .contact-card a {
            text-decoration: none;
        }

        .contact-card .footer-text p {
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <div class="contact-card text-center" id="contactCard">
        <h3>Account Locked</h3>
        <p>
            Your account has been locked due to certain reasons. Please contact the administrator to resolve this issue.
        </p>
        <a href="mailto:admin@hraccportal.com" class="btn btn-custom">
            Contact Administrator
        </a>
        <div class="footer-text">
            <p>Need urgent help? Call us at +1 (800) 123-4567.</p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            document.getElementById('contactCard').classList.add('show');
        });
    </script>
</body>
</html>
