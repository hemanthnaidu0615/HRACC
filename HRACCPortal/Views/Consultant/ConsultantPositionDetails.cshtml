                    decades: true,
                    year: true,
                    month: true,
                    date: true,
                    hours: false,
                    minutes: false,
                    seconds: false
                }
            }
        });
        new tempusDominus.TempusDominus(document.getElementById("PositionEndDate"), {
            display: {
                viewMode: "calendar",
                components: {
                    decades: true,
                    year: true,
                    month: true,
                    date: true,
                    hours: false,
                    minutes: false,
                    seconds: false
                }
            }
        });


        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("searchInput").addEventListener("keyup", function () {
                let filter = this.value.toLowerCase();
                let rows = document.querySelectorAll("#kt_customers_table tbody tr");

                rows.forEach(row => {
                    let text = row.textContent.toLowerCase();
                    row.style.display = text.includes(filter) ? "" : "none";
                });
            });
        });



        function GFG_click(clicked) {
            $.ajax({
                type: "POST",
                url: '/Consultant/EditConsultantPositionDetails',
                data: '{id: ' + clicked + '}',
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    $("#btnpopup").click();
                    $(".ConsultantIdFK").val(response.cl.ConsultantIdFK);
                    $(".ConsultantIdFK").change();
                    $(".PositionIdFK").val(response.cl.PositionIdFK);
                    $(".PositionIdFK").change();
                    $(".PositionRateIdFK").val(response.cl.PositionRateIdFK);
                    $(".PositionRateIdFK").change();
                    $("input[name='PositionStartDate']").val(response.cl.PositionStartDate);
                    $("input[name='PositionEndDate']").val(response.cl.PositionEndDate);
                    $("input[name='ConsultantPositionIdPK']").val(response.cl.ConsultantPositionIdPK);
                    if (response.cl.PositionActive == 'True') {
                        $("#PositionActive").prop('checked', true);
                    }
                    if (response.cl.PositionActive == false) {
                        $("#PositionActive").prop('checked', false);
                    }

                },
                error: function (jqXHR, textStatus, errorThrown) {
                    submitButton.removeAttribute('data-kt-indicator');

                    console.log("Custom error : " + jqXHR.responseText + " Status: " + textStatus + " Http error:" + errorThrown);

                    Swal.fire({
                        text: "Custom error : " + jqXHR.responseText + " Status: " + textStatus + " Http error:" + errorThrown,
                        icon: "error",
                        buttonsStyling: false,
                        confirmButtonText: "Ok, got it!",
                        customClass: {
                            confirmButton: "btn btn-primary"
                        }
                    });

                }
            });


        }
    </script>
