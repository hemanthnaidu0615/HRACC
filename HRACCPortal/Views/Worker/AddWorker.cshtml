                </div>
                <!--end::Actions-->
                <input type="hidden">
            </form>
            <!--end::Form-->
        </div>
        <!--end::Content-->
    </div>
</div>

@section scripts{
    <script>
       $(function () {
           $("#btnReset").click(function (e) {
               e.preventDefault();
               window.location.href = '@Url.Action("ViewWorkers", "Worker")';
           });

           $("#btnSave").click(function (e) {

            debugger;
            e.preventDefault();
               var work = {};
               work.WorkerName = $("#WorkerName").val();
               work.WorkerPhone = $("#WorkerPhone").val();
               work.WorkerEmail = $("#WorkerEmail").val();
               work.WorkerAddress1 = $("#WorkerAddress1").val();
               work.WorkerAddress2 = $("#WorkerAddress2").val();
               work.WorkerCity = $("#WorkerCity").val();
               work.WorkerState = $("#WorkerState").val();
               work.WorkerIdPK = $("#WorkerIdPK").val();

               work.WorkerZip = $("#WorkerZip").val();
               work.WorkerTitle = $("WorkerTitle").val();
               work.WorkerSalary = $("WorkerSalary").val();
               work.isActive = $('input#isActive').prop('checked');
               console.log("Worker:" + JSON.stringify(work))

             $.ajax({
                type: "POST",
                 url: '@Url.Action("AddWorker", "Worker")',
                 data: '{worker: ' + JSON.stringify(work) + '}',
                // data: JSON.stringify({ customer: cust }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    // alert("Data has been added successfully.");
                    if (response.Message == "SUCCESS") {
                        window.location.href = '@Url.Action("ViewWorkers", "Worker")';
                    } else {
                        alert("Error while inserting data");
                        return false;
                    }
                },
                error: function () {
                    alert("Error while inserting data");
                }
            });
            return false;
        });
    });
    </script>

}
